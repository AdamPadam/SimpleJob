<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="android:fontFamily">@font/avant_garde</item>
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryDark">@color/green_darken</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>-->

        <!-- remove shadow below action bar -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NormalText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.LabelText" parent="AppTheme.NormalText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>

    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>


    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>

